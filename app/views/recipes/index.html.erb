<div class="container py-5 bg-light">
  <h1 align="center">Recipes Listing</h1>
  <div class="row">
    <div class="container">
    <% @recipes.each do |recipe| %>
      <div class="card">
        <div class="row">
          <div class="col-md-3">
            <%= image_tag "iph_250x200.svg", class: '', alt: "Card image cap" %>
          </div>
          <div class="col-md-7">
            <div class="card-body">
              <h5><%= link_to recipe.name, recipe_path(recipe) %></h5>
              <p><%= truncate(recipe.description, length: 150) %></p>
              <p><span class="quiet"><small>Created <%= time_ago_in_words(recipe.created_at) %> ago</small></span></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row" >
      <% @recipes.each do |recipe| %>
      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <%= image_tag "iph_200x200.svg", class: 'card-img-top', alt: "Card image cap" %>
          <div class="card-body">
            <h3 class="mb-0"><%= link_to recipe.name, recipe_path(recipe) %></h3>
            <p class="card-text"><%= truncate(recipe.description, length: 75) %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
              </div>
              <p><span class="quiet"><small>Created <%= time_ago_in_words(recipe.created_at) %> ago</small></span></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
