<div class="container">
  <h1 align="center">Recipe Name: <%= @recipe.name.capitalize %></h1>
  <div class="well col-md-8 col-md-offset-2">
    <h4 class="description"><strong>Description: </strong></h4>
    <hr />
    <%= @recipe.description %>
    <p>
      Created by:
    </p>
    <p>
      <%= @recipe.chef.chefname %>
      <p><span class="quiet"><small>Created <%= time_ago_in_words(@recipe.created_at) %> ago</small></span></p>
    </p>
  </div>
</div>
