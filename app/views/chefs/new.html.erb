<%= render 'shared/page_title', title: "Sign up" %>

<%= render 'shared/application_errors', obj: @chef %>

<div class="container">
  <div class="card w-auto w-75 mx-auto bg-light" style="margin: 25px 0;">
    <div class="card-body">

      <div class="form-group col-md-12 mr-auto">
        [ <%= link_to "Have an account?", root_path, class: "" %> ]
      </div>

      <%= form_for(@chef, :html => {class: "col-md-12 mr-auto", role: "form"}) do |f| %>

      <div class="form-group row">
        <%= f.label :chefname, "User Name", class: "col-md-12 col-form-label col-form-label-sm" %>
        <div class="col-md-12">
          <%= f.text_field :chefname, class: "form-control form-control-sm", autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: "col-md-12 col-form-label col-form-label-sm" %>
        <div class="col-md-12">
          <%= f.email_field :email, class: "form-control form-control-sm" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-md-12 col-form-label col-form-label-sm" %>
        <div class="col-md-12">
          <%= f.password_field :password, class: "form-control form-control-sm" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, "Confirm Password", class: "col-md-12 col-form-label col-form-label-sm" %>
        <div class="col-md-12">
          <%= f.password_field :password_confirmation, class: "form-control form-control-sm" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "Create Account", class: "btn btn-primary btn-xlarge" %>
      </div>

      <div class="form-group text-muted">
        [ <%= link_to "Cancel", root_path %> ]
      </div>

      <% end %>
    </div>
  </div>
</div>
